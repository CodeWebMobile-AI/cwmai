# Coverage configuration for CWMAI testing

[run]
# Source code to measure
source = scripts

# Files to include in coverage
include = 
    scripts/*.py
    *.py

# Files to exclude from coverage
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    setup.py
    conftest.py

# Branch coverage
branch = True

# Coverage data file
data_file = .coverage

# Parallel processing
parallel = True

[report]
# Reporting options
show_missing = True
skip_covered = False
skip_empty = True

# Coverage thresholds
fail_under = 80

# Output format
precision = 2

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\(Protocol\):
    @(abc\.)?abstractmethod

# Ignore errors
ignore_errors = True

[html]
# HTML report options
directory = htmlcov
title = CWMAI Test Coverage Report

[xml]
# XML report options
output = coverage.xml

[json]
# JSON report options
output = coverage.json
pretty_print = True